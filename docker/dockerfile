FROM postgres:15

# Instala dependências necessárias para compilar extensões
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    clang \
    llvm \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# -------------------------------------------------------------------
# Instala PGVECTOR (versão estável e compatível com Postgres 15)
# -------------------------------------------------------------------
RUN git clone https://github.com/pgvector/pgvector.git /tmp/pgvector && \
    cd /tmp/pgvector && \
    make && make install && \
    rm -rf /tmp/pgvector

# -------------------------------------------------------------------
# Instala APACHE AGE v1.4.0 (compatível com Postgres 15)
# -------------------------------------------------------------------
RUN git clone --branch v1.4.0 https://github.com/apache/age.git /tmp/age && \
    cd /tmp/age && \
    make PG_CONFIG=/usr/lib/postgresql/15/bin/pg_config && \
    make install PG_CONFIG=/usr/lib/postgresql/15/bin/pg_config && \
    rm -rf /tmp/age

# Copia arquivo de inicialização (cria extensões)
COPY init.sql /docker-entrypoint-initdb.d/init.sql
