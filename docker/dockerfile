FROM postgres:15

# Instala dependências necessárias para compilar extensões
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    postgresql-server-dev-15 \
    && rm -rf /var/lib/apt/lists/*

# Instala pgvector
RUN git clone https://github.com/pgvector/pgvector.git /tmp/pgvector && \
    cd /tmp/pgvector && \
    make && make install && \
    rm -rf /tmp/pgvector

# Instala Apache AGE (compatível com Postgres 15)
RUN git clone --branch v1.5.0 https://github.com/apache/age.git /tmp/age && \
    cd /tmp/age && \
    make PG_CONFIG=/usr/lib/postgresql/15/bin/pg_config && \
    make install PG_CONFIG=/usr/lib/postgresql/15/bin/pg_config && \
    rm -rf /tmp/age

# Copia scripts de inicialização
COPY init.sql /docker-entrypoint-initdb.d/

# Expõe a porta padrão do Postgres
EXPOSE 5432
